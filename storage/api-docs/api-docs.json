    "components": {
        "schemas": {
            "UserResource": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "johndoe@example.com"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-23T12:00:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-23T12:00:00Z"
                    }
                },
                "type": "object"
            },
            "Transaction": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "amount": {
                        "type": "number",
                        "example": 1500
                    },
                    "category": {
                        "type": "string",
                        "example": "Food"
                    },
                    "type": {
                        "type": "string",
                        "example": "expense"
                    },
                    "date": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-01-23"
                    },
                    "description": {
                        "type": "string",
                        "example": "Lunch"
                    },
                    "user_id": {
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            },
            "TransactionRequest": {
                "required": [
                    "amount",
                    "category",
                    "type",
                    "date",
                    "user_id"
                ],
                "properties": {
                    "amount": {
                        "type": "number",
                        "example": 1500
                    },
                    "category": {
                        "type": "string",
                        "example": "Food"
                    },
                    "type": {
                        "type": "string",
                        "example": "expense"
                    },
                    "date": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-01-23"
                    },
                    "description": {
                        "type": "string",
                        "example": "Lunch",
                        "nullable": true
                    },
                    "user_id": {
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            },
            "Budget": {
                "required": [
                    "amount",
                    "category"
                ],
                "properties": {
                    "budget": {
                        "type": "number",
                        "example": 5000
                    },
                    "category": {
                        "type": "string",
                        "example": "Marketing"
                    }
                },
                "type": "object"
            },
            "Reminder": {
                "required": [
                    "user_id",
                    "title",
                    "amount",
                    "due_date"
                ],
                "properties": {
                    "user_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Pay bills"
                    },
                    "amount": {
                        "type": "number",
                        "format": "float",
                        "example": 500
                    },
                    "due_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-01-25"
                    }
                },
                "type": "object"
            },
            "MonthlyReportResponse": {
                "required": [
